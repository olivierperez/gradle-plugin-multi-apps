<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardView.Pikachu" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/pikachuGray</item>
        <item name="colorOnSurface">@color/pikachuYellow</item>

        <item name="android:textColor">@color/pikachuYellow</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomNavBarStyle.Pikachu" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pikachu.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.Pikachu.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/pikachuGrayDark</item>
        <item name="colorOnPrimary">@color/pikachuYellow</item>
    </style>
</resources>